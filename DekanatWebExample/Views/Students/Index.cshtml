@model IEnumerable<DekanatWebExample.Models.Student>

@{
    ViewBag.Title = "Students";
}

    <h2>Students</h2>

<div class="panel">
    <span class="btn">
        @Html.ActionLink("New Student", "Create")
    </span>
    <form class="form-inline">
        Group: @Html.DropDownList("groupID", ViewBag.Groups as SelectList)
        Name: @Html.TextBox("searchString")
        <input type="submit" value="Search" />
    </form>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Studbilet)
            @{
                if (ViewBag.StudbiletSortParam == "↑")
                {
                    @Html.ActionLink("↓", "Index", new { sortOrder = "Studbilet_desc" });
                }
                else
                {
                    @Html.ActionLink("↑", "Index", new { sortOrder = "Studbilet" });
                }
             }
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
            @{
                if (ViewBag.NameSortParam == "↑")
                {
                    @Html.ActionLink("↓", "Index", new { sortOrder = "Name_desc" });
                }
                else
                {
                    @Html.ActionLink("↑", "Index", new { sortOrder = "Name" });
                }
            }
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
            @{
                if (ViewBag.BirthDateSortParam == "↑")
                {
                    @Html.ActionLink("↓", "Index", new { sortOrder = "BirthDate_desc" });
                }
                else
                {
                    @Html.ActionLink("↑", "Index", new { sortOrder = "BirthDate" });
                }
            }
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Group)
            @{
                if (ViewBag.GroupSortParam == "↑")
                {
                    @Html.ActionLink("↓", "Index", new { sortOrder = "Group_desc" });
                }
                else
                {
                    @Html.ActionLink("↑", "Index", new { sortOrder = "Group" });
                }
            }
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Studbilet)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Group.Name)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
